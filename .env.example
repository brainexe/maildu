# IMAP Server Configuration
# The IMAP server hostname (required)
IMAP_SERVER=imap.gmail.com

# IMAP server port (default: 993 for TLS, 143 for non-TLS)
IMAP_PORT=993

# Use TLS encryption (default: true)
IMAP_TLS=true

# Skip TLS certificate verification (default: false)
# Set to true only for testing with self-signed certificates
IMAP_SKIP_CERT_VERIFY=false

# IMAP Authentication (required)
# Your IMAP username/email
IMAP_USER=your-email@example.com

# Your IMAP password or app-specific password
IMAP_PASS=your-password-here

# Application Configuration
# Cache file path (optional, defaults to ~/.local/share/imapdu/imapdu-cache.bolt)
IMAPDU_CACHE=/path/to/custom/cache.bolt

# Network timeout for IMAP operations (default: 30s)
IMAP_TIMEOUT=30s

# Dry run mode - prevent actual deletion of mails/attachments (default: true)
# Set to false to enable actual deletions (USE WITH CAUTION!)
IMAPDU_DRY_RUN=true
